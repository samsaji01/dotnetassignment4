@page
@model Assignment4.Pages.Trains.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h2>Edit</h2>

<h4>Train</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Train.Id" />
            <div class="form-group">
                <label asp-for="Train.TrainName" class="control-label"></label>
                <input asp-for="Train.TrainName" class="form-control" />
                <span asp-validation-for="Train.TrainName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.TrainNumber" class="control-label"></label>
                <input asp-for="Train.TrainNumber" class="form-control" />
                <span asp-validation-for="Train.TrainNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.TrainStation" class="control-label"></label>
                <input asp-for="Train.TrainStation" class="form-control" />
                <span asp-validation-for="Train.TrainStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Train.TicketPrice" class="control-label"></label>
                <input asp-for="Train.TicketPrice" class="form-control" />
                <span asp-validation-for="Train.TicketPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
